{% for from=$search_audios item=audio}
<div class="search-box-result">
<div class="search-box-result-audio">
  <div class="thumb-80">
    <a href="{{ audio.url }}"><img src="{{ audio.thumb_80_80 }}" style="width: 80px; height: 80px; float: left; margin-right: 2px;" alt="{{ audio.name }}"></a>
    <a class="overlay-80 overlay-audio-80" href="{{ audio.url }}" title="{{ audio.name }}"></a>
  </div>
  <a href="{{ audio.url }}"><strong>{{ audio.name }}</strong></a>
  {% if audio.groupe_id %}
  <br><a href="/{{ audio.groupe_alias }}">{{ audio.groupe_name }}</a>
  {% endif %}
  {% if audio.lieu_id %}
  <br>{{ audio.lieu_name }} ({{ audio.event_date|date_format:'%d/%m/%Y' }})
  {% endif %}
  <br style="clear: both">
</div>
</div>
{% endfor %}
