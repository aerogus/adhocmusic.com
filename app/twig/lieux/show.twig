{% include 'common/header.twig' %}

{% if unknown_lieu}}

<p class="infobulle error">Ce lieu est introuvable !</p>

{% else %}

{% if create}}
<div class="infobulle success">Le lieu a bien √©t√© ajout√©</div>
{% endif %}

{% if edit}}
<div class="infobulle success">Le lieu a bien √©t√© modifi√©</div>
{% endif %}

<div class="box">
  <header>
    <h1>{{ lieu.name }}</h1>
  </header>
  <div>
    <div id="map_canvas" style="width: 50%; height: 320px; float: right; z-index: 1"></div>

    <div class="infos" style="width: 300px; padding: 10px;">
      <strong>{{ lieu.name }}</strong><br>
      {{ lieu.Address }}<br>
      {{ lieu.city.Cp }} {{ lieu.city.name }}<br>
      {% if $lieu.idCountry() === 'FR'}
      {{ lieu.idDepartement }} / {{ lieu.Departement().name }}<br>
      {% endif %}
      {{ lieu.Region().name }}<br>
      <img src="{{ lieu.Country().FlagUrl }}" alt="{{ lieu.idCountry }}"> {{ lieu.Country().name }}
    </div>

    <div class="infos" style="padding: 10px;">
      {{ lieu.Type }}<br>
      {% if $lieu.Site }}
      <a href="{{ lieu.Site }}">{{ lieu.Site }}</a><br>
      {% endif %}
    </div>

    <div class="infos" style="padding: 10px;">
    {{ lieu.Text()|nl2br}
    </div>

    <br style="clear: both;">

  </div>
</div>

{% if events_f}}
<div class="box">
  <header>
    <h2>Agenda</h2>
  </header>
  <div>
    <ul>
      {% for $events_f as $event}
      {assign var=structures value=$event.Structures }}
      <li>{% if $structures}<img src="{{ structures[0].Picto }}" alt="" title="Organis√© par {{ structures[0].name }}">{% endif %}<a href="{{ event.Url }}">Le {{ event.Date()|date_format:"%d/%m/%Y %H:%M"} - {{ event.name }}</a></li>
      {% endfor %}
    </ul>
  </div>
</div>
{% endif %}

{% if events_p}}
<div class="box">
  <header>
    <h2>Ev√©nements pass√©s</h2>
  </header>
  <div>
    <ul>
      {% for from=$events_p item=event}
      {assign var=structures value=$event.Structures }}
      <li>{% if $structures}<img src="{{ structures[0].Picto }}" alt="" title="Organis√© par {{ structures[0].name }}">{% endif %}<a href="{{ event.Url }}">Le {{ event.Date()|date_format:"%d/%m/%Y %H:%M"} - {{ event.name }}</a></li>
      {% endfor %}
    </ul>
  </div>
</div>
{% endif %}

{% if photos}}
<div class="box">
  <header>
    <h2>Photos</h2>
  </header>
  <div class="reset gallery">
  {% for from=$photos item=photo}
    <div class="photo">
      <a href="{{ photo.ThumbUrl(1000}}" data-id="{{ photo.idPhoto }}" data-at-1000="{{ photo.ThumbUrl(1000}}" title="{{ photo.name }}{% if photo.Groupe()}} ({{ photo.Groupe().name }}){% endif %} üì∑ {{ photo.Credits }}">
        <img data-id="{{ photo.idPhoto }}" src="{{ photo.ThumbUrl(320}}" alt="{{ photo.name }}{% if photo.Groupe()}} ({{ photo.Groupe().name }}){% endif %}">
      </a>
    </div>
  {% endfor %}
  </div>
</div>
{% endif %}

{% if audios}}
<div class="box">
  <header>
    <h2>Sons</h2>
  </header>
  <div>
    <ul>
      {% for $audios as $audio}
      <li>Titre : <strong>{{ audio.name }}</strong>
      {% if audio.Groupe()}}<br>Groupe : <a href="{{ audio.Groupe().Url }}">{{ audio.Groupe().name }}</a>{% endif %}
      {% if audio.Event()}}<br>Ev√©nement : <a href="{{ audio.Event().Url }}">{{ audio.Event().name }}</a> ({{ audio.Event().Date()|date_format:'%d/%m/%Y'}){% endif %}
      <br><audio src="{{ audio.DirectMp3Url }}"></audio></li>
      {% endfor %}
    </ul>
  </div>
</div>
{% endif %}

{% if videos}}
<div class="box">
  <header>
    <h2>Vid√©os</h2>
  </header>
  <div class="reset grid-3-small-2 has-gutter">
    {% for $videos as $video}
    <div class="video">
      <div class="thumb" style="background-image: url({{ video.ThumbUrl(320}})">
        <a class="playbtn" href="{{ video.Url }}" title="Regarder la vid√©o {{ video.name }}">‚ñ∂</a>
      </div>
      <p class="title"><a href="{{ video.Url }}" title="Regarder la vid√©o {{ video.name }}">{{ video.name }}</a></p>
      <p class="subtitle">
        {% if video.Groupe()}}<a href="{{ video.Groupe().Url }}" title="Aller √† la page du groupe {{ video.Groupe().name }}">{{ video.Groupe().name }}</a>{% endif %}
        {% if video.Groupe()) && video.Event()}}<br/>{% endif %}
        {% if video.Event()}}<a href="{{ video.Event().Url }}" title="Aller √† la page de l'√©v√©nement {{ video.Event().name }}">{{ video.Event().Date()|date_format:"%a %e %B %Y"}</a>{% endif %}
      </p>
    </div>
    {% endfor %}
  </div>
</div>
{% endif %}

{% endif %} {# test unknown lieu #}

{% include 'common/footer.twig' %}
