{% include 'common/header.twig' %}

<div class="grid-2 has-gutter">

<div class="box">
  <header>
    <h1>Se connecter</h1>
  </header>
  <div>
    <form id="form-login" name="form-login" method="post" action="/auth/login">
      <div class="mbs">
        <label for="login-pseudo">Pseudo</label>
        <div class="infobulle error" id="error_login-pseudo"{% if not error_login_pseudo %} style="display: none"{% endif %}>Pseudo vide !</div>
        <input type="text" id="login-pseudo" name="pseudo" required="required" placeholder="Pseudo" class="w100">
      </div>
      <div class="mbm">
        <label for="login-password">Mot de passe</label>
        <div class="infobulle error" id="error_login-password"{% if not error_login_password %} style="display: none"{% endif %}>Mot de passe vide !</div>
        <input type="password" id="login-password" name="password" required="required" placeholder="Mot de passe" class="w100">
      </div>
      <div class="mbs">
        <input id="form-login-submit" name="form-login-submit" type="submit" value="Je me connecte" class="btn btn--primary w100">
        {% if referer %}<input type="hidden" id="login-referer" name="referer" value="{{ referer|url_encode }}">{% endif %}
      </div>
      <div class="txtcenter">
        <ul>
          <li><a href="/auth/lost-password">mot de passe oublié</a></li>
        </ul>
      </div>
    </form>
  </div>
</div>

<div class="box">
  <header>
    <h1>Créer un compte</h1>
  </header>
  <div>
    <form id="form-member-create" name="form-member-create" method="post" action="/membres/create">
      <div class="mbs">
        <label for="pseudo">Pseudo</label>
        <div id="error_pseudo_unavailable" class="infobulle error"{% if not error_pseudo_unavailable %} style="display: none"{% endif %}>Ce pseudo est pris, veuillez en choisir un autre</div>
        <div class="infobulle error" id="error_pseudo"{% if not error_pseudo %} style="display: none"{% endif %}>Vous devez saisir un pseudo entre 2 à 16 caractères</div>
        <input id="pseudo" name="pseudo" type="text" value="{% if data.pseudo %}{{ data.pseudo }}{% endif %}" required="required" placeholder="Pseudo" class="w100">
      </div>
      <div class="mbs">
        <label for="email">E-mail</label>
        <div id="error_email"{% if not error_email %} style="display: none"{% endif %} class="infobulle error">Vous devez saisir votre e-mail</div>
        <div id="error_invalid_email" class="infobulle error"{% if not error_invalid_email %} style="display: none"{% endif %}>Cet e-mail semble invalide</div>
        <div id="error_already_member" class="infobulle error"{% if not error_already_member %} style="display: none"{% endif %}>Inscription impossible car un compte avec cet e-mail existe déjà. Vous avez <a href="/auth/lost-password">oublié votre mot de passe ?</a></div>
        <input id="email" name="email" type="email" value="{% if data.email %}{{ data.email }}{% endif %}" required="required" placeholder="E-mail" class="w100">
      </div>
      <div class="mbs">
        <label for="mailing" class="visually-hidden">Newsletter</label>
        <input id="mailing" class="checkbox" name="mailing" type="checkbox"{% if data.mailing %} checked="checked"{% endif %}> Je souhaite recevoir la newsletter
      </div>
      <div>
        <input type="hidden" name="csrf" value="{% if data.csrf %}{{ data.csrf }}{% endif %}">
        <input type="hidden" name="text" value="{% if data.text %}{{ data.text }}{% endif %}">
        <input id="form-membrer-create-submit" name="form-member-create-submit" class="btn btn--primary w100" type="submit" value="Je crée mon compte">
      </div>
    </form>
  </div>
</div>

</div>

{% include 'common/footer.twig' %}
