{% include 'common/header.twig' %}

<div class="box">
  <header>
    <h1>Newsletters</h1>
  </header>
  <div>
    <p>nombre d'abonnés : {{ nb_sub}</p>
    <p><a href="/adm/newsletter/create" class="btn btn--primary">Écrire une lettre</a></p>
    <table class="table table--zebra">
      <thead>
        <tr>
          <th scope="col" class="w10">#</th>
          <th scope="col" class="w10">Voir</th>
          <th scope="col">Sujet</th>
        </tr>
      </thead>
      <tbody>
        {% for from=$newsletters item=newsletter}
        <tr>
          <td>{{ newsletter.idNewsletter }}</td>
          <td><a href="/newsletters/{{ newsletter.idNewsletter }}" target="_blank">[voir]</a></td>
          <td><a href="/adm/newsletter/edit/{{ newsletter.idNewsletter }}">{{ newsletter.Title }}</a></td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</div>

{% include 'common/footer.twig' %}
