{% include 'common/header.twig' %}

<div class="box">
  <header>
    <h1>Édition d'une question fréquente</h1>
  </header>
  <div>
  <form id="form-faq-edit" name="form-faq-edit" action="/adm/faq/edit" method="post">
  <ul>
    <li>
      <label for="id_category">Catégorie</label>
      <select name="id_category">
      {% for from=$categories item=cat}
        <option value="{{ cat.Id }}"{% if $faq.IdCategory() === $cat.Id }} selected="selected"{% endif %}>{{ cat.Name }}</option>
      {% endfor %}
      </select>
    </li>
    <li>
      <label for="question">Question</label>
      <textarea id="question" name="question">{{ faq.Question }}</textarea>
    </li>
    <li>
      <label for="answer">Réponse</label>
      <textarea id="answer" name="answer">{{ faq.Answer }}</textarea>
    </li>
    <li>
      <label for="online">Afficher</label>
      <input class="switch" type="checkbox" id="online" name="online"{% if $faq.Online }} checked="checked"{% endif %}>
    </li>
  </ul>
  <input type="hidden" name="id_faq" value="{{ faq.Id }}">
  <input class="btn btn--primary" id="form-faq-edit-submit" name="form-faq-edit-submit" type="submit">
  </form>
  </div>
</div>

{% include 'common/footer.twig' %}
