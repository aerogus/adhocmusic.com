{% include 'common/header.twig' %}

<div class="box">
  <header>
    <h1>Membre</h1>
  </header>
  <div>
  <table>
    <caption>Infos générales</caption>
    <tr>
      <th>Id</th>
      <td>{{ membre.id }}</td>
    </tr>
    <tr>
      <th>Email</th>
      <td>{{ membre.Email }}</td>
    </tr>
    <tr>
      <th>Date Ouverture Newsletter</th>
      <td>{{ membre.Lastnl }}</td>
    </tr>
    <tr>
      <th>Abonnement Newsletter</th>
      <td>{{ membre.Mailing }}</td>
    </tr>
    <tr>
      <th>Pseudo</th>
      <td>{{ membre.Pseudo }}</td>
    </tr>
    <tr>
      <th>Nom</th>
      <td>{{ membre.LastName }}</td>
    </tr>
    <tr>
      <th>Prénom</th>
      <td>{{ membre.FirstName }}</td>
    </tr>
    <tr>
      <th>Date Inscription</th>
      <td>{{ membre.CreatedAt }}</td>
    </tr>
    <tr>
      <th>Date Modification</th>
      <td>{{ membre.ModifiedAt }}</td>
    </tr>
    <tr>
      <th>Date Visite</th>
      <td>{{ membre.VisitedAt }}</td>
    </tr>
    <tr>
      <th>Adresse</th>
      <td>{{ membre.Address }}</td>
    </tr>
    <tr>
      <th>Code Postal</th>
      <td>{% if $membre.City }}{{ membre.city.Cp }}{% endif %}</td>
    </tr>
    <tr>
      <th>Ville</th>
      <td>{% if $membre.City }}{{ membre.city.name }}{% endif %}</td>
    </tr>
    <tr>
      <th>Pays</th>
      <td>{% if $membre.Country }}{{ membre.Country().name }}{% endif %}</td>
    </tr>
    <tr>
      <th>Téléphone</th>
      <td>{{ membre.Tel }}</td>
    </tr>
    <tr>
      <th>Portable</th>
      <td>{{ membre.Port }}</td>
    </tr>
    <tr>
      <th>Site</th>
      <td>{{ membre.Site }}</td>
    </tr>
    <tr>
      <th>Niveau</th>
      <td>{{ membre.Level }}</td>
    </tr>
    <tr>
      <th>Texte</th>
      <td>{{ membre.Text }}</td>
    </tr>
  </table>
  <table>
    <caption>Ses Groupes</caption>
    <tr>
      <th>Nom</th>
      <th>Supprimer</th>
    </tr>
    {% for from=$membre.Groupes() item=groupe}
    <tr>
      <td><a href="/adm/groupes/{{ groupe.idGroupe }}">{{ groupe.name }}</a></td>
      <td><a class="btn btn--secondary" href="/adm/appartient-a?from=membre&action=delete&membre={{ membre.idContact }}&groupe={{ groupe.idGroupe }}">Supprimer</a></td>
    </tr>
    {% endfor %}
  </table>
  <a class="btn btn--primary" href="/adm/appartient-a?from=membre&action=create&membre={{ membre.idContact }}">Ajout Groupe</a>
  </div>
</div>

{% include 'common/footer.twig' %}
