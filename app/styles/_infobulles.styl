/* messages box */

.info,
.success,
.warning,
.error,
.validation
  border 1px solid
  margin 10px 0
  padding 10px 10px 10px 50px
  background-repeat no-repeat
  background-position 10px center

  & a
    font-weight bold

  & ul
    padding 0
    margin 0

    & li
      background url(/favicon.png) no-repeat 0 0
      padding-left 25px
      margin 5px

/* todo icones svg */

/* bandeau informatif, mise en avant d'une info */

.info
  color #292933
  background-color #fff
  background-image url(/img/icones/info.png)

/* confirmation d'une action qui s'est déroulée avec succès */

.success
  color #4f8a10
  background-color #dff2bf
  background-image url(/img/icones/success.png)

/* annonce d'un avertissement suite à une mauvaise saisie */

.warning
  color #9f6000
  background-color #feefb3
  background-image url(/img/icones/warning.png)

/* annonce d'une erreur bloquante */

.error
  color #d8000c
  background-color #ffbaba
  background-image url(/img/icones/error.png)

/* demande d'une attention particulière avant confirmation d'un formulaire */

.validation
  color #d63301
  background-color #ffccba
  background-image url(/img/icones/validation.png)

