/* messages box */

.info, .success, .warning, .error, .validation
  border 1px solid
  margin 10px
  padding 15px 10px 15px 50px
  background-repeat no-repeat
  background-position 10px center
  border-radius 5px

.info ul, .success ul, .warning ul, .error ul, .validation ul
  padding 0
  margin 0

.info ul li, .success ul li, .warning ul li, .error ul li, .validation ul li
  background url(/favicon.png) no-repeat 0 0
  padding-left 25px
  margin 5px

.info
  color #00529b
  background-color #bde5f8
  background-image url(/img/icones/info.png)

.success
  color #4f8a10
  background-color #dff2bf
  background-image url(/img/icones/success.png)

.warning
  color #9f6000
  background-color #feefb3
  background-image url(/img/icones/warning.png)

.error
  color #d8000c
  background-color #ffbaba
  background-image url(/img/icones/error.png)

.validation
  color #d63301
  background-color #ffccba
  background-image url(/img/icones/validation.png)
