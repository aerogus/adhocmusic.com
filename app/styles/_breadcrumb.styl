/* Breadcrumb Styles */

.breadcrumb
  max-width 1000px
  margin 0 auto
  text-align left

  ul

    li
      display inline-block

      a, span
        display inline-block
        padding 5px
        margin 10 5px 0 0
        background #f0f0f0

      a
        font-weight bold

      &:after
        content ' > '

      &:last-child:after
          content ''
