/* Breadcrumb Styles */

.breadcrumb
  max-width 1000px
  margin 0 auto
  text-align left

  ul

    li
      display inline-block

      a, span
        display inline-block
        padding 1rem
        margin 10 5px 0 0

      a
        font-weight bold

      &:after
        content ' / '

      &:last-child:after
          content ''
