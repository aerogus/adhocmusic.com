/* pagination */

.pagination
  clear both
  width 50%
  margin 20px auto
  text-align center

.unselectedpage, .selectedpage
  padding 9px
  text-decoration none

.unselectedpage
  background #333
  color #fff

.unselectedpage:hover
  background #fff
  color #000

.selectedpage
  background #b00
  color #fff
  font-weight bold

.selectedpage:hover
  background #f00
