/**
 * page d'une newsletter sur le site
 */

#newsletter
  background #fff
  color #000
  padding 20px

#newsletterbody
  padding-left 200px
  width 550px

#newsletterbody table
  box-shadow 5px 5px 50px rgba(0, 0, 0, 0.5)
  zoom 1

#newsletter pre
  color #000

#newsletter tr th
  background-color #bb0000
  background-image linear-gradient(top, #ff0000, #660000)

#newsletter tr td
  backgroundd #efefef

#newsletter table tr td table
  margin 0 auto

#newsletter table tr td table tr td
  padding 15px
  text-align center
