html
  font-family sans-serif
  -ms-text-size-adjust 100%
  -webkit-text-size-adjust 100%
  font-size 62.5%

body
  background #ececec
  font-family Arial
  font-size 1.4rem
  color #000
  line-height 1.5

h1, h2, h3, h4, h5, h6
  font-weight bold

h1
  font-size 3.2rem

h2
  font-size 2.8rem

h3
  font-size 2.4rem

h4
  font-size 2rem

h5
  font-size 1.8rem

h6
  font-size 1.6rem

b, strong
  font-weight bold

i, em
  font-style italic

img
  border 0

a, a:link, a:visited, a:active, a:hover
  color inherit
  text-decoration none

