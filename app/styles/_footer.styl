/**
 * Pied de page
 */

footer
  background #292933
  padding-bottom 20px

  @media screen and (max-width: 680px)
    &
      position static

  &:before
    content ''
    display block
    height 50px
    background #292933
    transform skewY(-2deg)
    top -25px
    position relative
    z-index -1

    @media screen and (max-width: 680px)
      &
        height 24px
        top -12px

.footer
  max-width 680px
  margin 0 auto

  > li
    margin-top -20px
    display inline-block
    padding 0 1em 1em 1em
    vertical-align top
    width 32%

    @media screen and (max-width: 680px)
      &
        width 100%
        display block

    h4
      font-family TradeGothic
      text-transform uppercase
      display block
      margin .5rem 0
      color #fff
      border-bottom 1px solid #3a3a3d

    a
      color #a7a7a7
      display block
      padding 3px 0

  .facebook, .twitter, .instagram, .email
    background-repeat no-repeat
    padding-left 24px

  .facebook
    background-image inline('../assets/img/social/facebook.svg')

  .twitter
    background-image inline('../assets/img/social/twitter.svg')

  .instagram
    background-image inline('../assets/img/social/instagram.svg')

  .email
    background-image inline('../assets/img/social/email.svg')

vendorize(property, value)
  -webkit-{property} value
  {property} value

.footer img
  vendorize(filter, grayscale(1))
  margin-right 5px
