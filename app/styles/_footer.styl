/**
 * Pied de page
 */

footer
  background #292933 url(/img/tri/top-left-ececec.svg) no-repeat
  background-size 100% 4vw
  padding-top 6vw
  padding-bottom 20px
  color #a7a7a7

  @media screen and (max-width: 680px)
    &
      position static
      background-size 100% 4vw
      padding-top 8vw

.baseline
  text-align center
  margin 1rem
  font-style italic

.footer
  max-width 960px
  margin 0 auto
  display flex
  flex-wrap wrap

  > li
    margin-top -20px
    display inline-flex
    vertical-align top
    width 25%
    padding 1rem

    @media screen and (max-width: 680px)
      &
        margin-top 0
        width 50%

    h4
      font-family TradeGothic
      text-transform uppercase
      display block
      margin .5rem 0
      color #fff

      @media screen and (max-width: 680px)
        &
          margin 1rem 0

    a
      color #a7a7a7
      display block
      line-height 2.4rem

  .facebook,
  .twitter,
  .instagram,
  .email,
  .peertube
    background-repeat no-repeat
    padding-left 24px

  .facebook
    background-image url(/img/social/facebook.svg)

  .twitter
    background-image url(/img/social/twitter.svg)

  .instagram
    background-image url(/img/social/instagram.svg)

  .email
    background-image url(/img/social/email.svg)

  .peertube
    background-image url(/img/social/peertube.svg)
    background-size 16px
    background-position 4px center
    filter grayscale(100%)
