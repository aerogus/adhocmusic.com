.concours
  p
    font-size 1.6rem

#map
  position relative
  margin 20px auto
  width 980px
  height 794px
  background url(../img/concours/epinay-980-old.jpg)
  cursor crosshair

  .overlay
    height 100%
    background url(../img/concours/epinay-980-new.png)
    opacity .5

  .target
    display none
    position absolute
    background url(../img/target.svg) no-repeat 0 / cover
    width 32px
    height 32px
    z-index 20

  .popup
    display none
    position absolute
    border 1px solid 
    margin 10px
    padding 10px
    border-radius 3px
    background #fff
    z-index 20
    cursor initial

    button
      cursor pointer

  .congrats
    display none
    border 2px solid #336633
    position absolute
    margin 0 auto
    color #000
    z-index 10
    padding 1rem
    font-weight bold
    font-size 2.6rem
    background #99cc99
    top 20px
    left 20px

