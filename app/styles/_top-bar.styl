.top-bar
  display flex
  background #292933
  line-height 38px
  align-items center

  .top-bar-title
    font-family TradeGothic
    background url(../img/logos/note.svg) no-repeat 9px 5px / 24px
    color #fff
    padding 0 3.5rem
    margin-right auto
    font-size 24px
    white-space nowrap

  .top-menu
    color #fff
    font-family TradeGothic
    text-transform uppercase
    font-size 16px
    > ul > li
      display inline-block
      position relative
      white-space nowrap
      > a
        padding 0 1.25rem
        display inline-block
        line-height 38px
        &.avatar
          background url(../img/avatar.svg) no-repeat 2px 0 / 16px
          display inline-block
          width 32px
          height 16px
          span
            display none
      > ul
        position absolute
        display none
        background #292933
      &:hover,
      &.hover
        > ul
          z-index 100
          display block
          li
            display block
            a
              display inline-block
              padding .25rem 1.25rem
