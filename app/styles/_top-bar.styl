/**
 * Barre du haut + menu
 */

.top-bar
  background #292933
  position fixed
  width 100%
  z-index 100
  top 0

  .top-bar-inner
    display flex
    line-height 4rem
    align-items center
    max-width 1000px
    margin 0 auto

    .top-bar-title
      font-family TradeGothic
      background url(../img/logos/note.svg) no-repeat 9px 7px / 24px
      color #fff
      padding 0 3.5rem
      margin-right auto
      font-size 2.4rem
      white-space nowrap

    .top-bar-burger
      display none
      border 0
      color #fff
      background none
      font-size 2.4rem
      padding 0 1.2rem
      line-height 4rem

    .top-menu
      color #fff
      font-family TradeGothic
      text-transform uppercase
      font-size 1.6rem
      > ul > li
        display inline-block
        position relative
        white-space nowrap
        &:hover
          background #fff
          color #292929
        > a
          padding 0 1.25rem
          line-height 4rem
        > ul
          position absolute
          display none
          background #292933
          color #fff
        &:hover
          > ul
            z-index 100
            display block
            li
              display block
              &:hover
                background #fff
                color #292933
              a
                display inline-block
                padding .25rem 1.25rem

    @media screen and (max-width: 680px)

      .top-bar-burger
        display block
        transition transform .2s ease
        &.selected
          transform rotate(-90deg)
      
      .top-menu
        display block
        position absolute
        width 100%
        left 0
        z-index 100
        overflow hidden
        background-color #292933
        max-height 0
        transition max-height .2s
        &.selected
          display block
          /* 7*4 entrÃ©es de menu */
          max-height 28rem
          > ul > li
            display block
            text-align right
            &:hover
              > ul
                display none
