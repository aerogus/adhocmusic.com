.top-bar
  background #292933

  .top-bar-inner
    display flex
    line-height 4rem
    align-items center
    max-width 1000px
    margin 0 auto

  .top-bar-title
    font-family TradeGothic
    background url(../img/logos/note.svg) no-repeat 9px 5px / 24px
    color #fff
    padding 0 3.5rem
    margin-right auto
    font-size 2.4rem
    white-space nowrap

  .top-menu
    color #fff
    font-family TradeGothic
    text-transform uppercase
    font-size 1.6rem
    > ul > li
      display inline-block
      position relative
      white-space nowrap
      &:hover
        background #fff
        color #292929
      > a
        padding 0 1.25rem
        line-height 4rem
      > ul
        position absolute
        display none
        background #292933
        color #fff
      &:hover
        > ul
          z-index 100
          display block
          li
            display block
            &:hover
              background #fff
              color #292933
            a
              display inline-block
              padding .25rem 1.25rem
