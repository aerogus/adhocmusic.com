/*
 * structure générale
 */

html
  min-height 100%
  height 100%

body
  position relative
  min-height 100%
  height auto

.gallery
  margin auto

  .photo
    margin-bottom 20px

.site_content
  max-width 1000px
  /* 4rem de hauteur de top-bar fixed + 1rem de marge */
  margin 5rem auto 0
  position relative

  @media screen and (max-width: 680px)
    &
      padding-bottom unset

.button,
.btn
  text-align center
  margin 10px auto
  width 120px
  background #f0f0f0
  padding 10px
  color #000
  font-weight bold
  display block

  &:hover
    background #0f0f0f
    color #fff
    text-decoration none

/**************
 * liens
 **************/

a.extlink
  padding-left 16px
  background url(/img/icones/extlink.gif) no-repeat

/**************
 * divers
 **************/

blockquote
  font-family Arial
  color #000
  background none repeat

pre
  color #000
  line-height 0.6em

/**************
 * formulaires
 **************/

fieldset
  padding 10px
  margin-bottom 15px
  border 1px solid #666

legend
  color #fff
  font-weight bold
  font-size 1.4em
  padding 5px
  background-color #666

label
  display block
  font-size .9em
  font-weight bold

  .inline
    display inline

input[type="text"],
input[type="email"],
input[type="password"],
textarea
  border #ccc 1px solid
  background-color #f0f0f0
  color #333
  line-height 2.4rem
  border-radius 2px
  margin-bottom 1rem

  &.valid
    border-color #4f8a10

  &.error
    border-color #d8000c

input[type="submit"],
input[type="button"]
  background #292933
  color #fff
  border 0
  font-weight bold

select
  border 1px solid #888
  background-color #ececec
  color #000

option
  background-color #ececec
  color #000

input:focus,
textarea:focus
  background-color #fff

/**************
 * adm featured
 **************/

.programme
  background-color #ff9999

.enligne
  background-color #99ff99

.archive
  background-color #666666

/* thumbnails photo et video */

.thumb-80
  position relative
  display inline-block
  width 80px
  height 80px
  font-size 0.9em
  transition all 0.2s ease-in-out

.overlay-80
  visibility hidden
  position absolute
  top 0
  left 0
  width 80px
  height 80px
  background-image url(/img/cache-media.png)

.overlay-photo-80
  background-position -0px -80px

.overlay-video-80
  background-position -0px -160px

.overlay-audio-80
  background-position -0px -0px

.thumb-100
  position relative
  float left
  width 100px
  height 100px

.thumb-100 h3
  position absolute
  bottom 0
  width 100px
  text-align center
  min-height 20px
  background rgba(150, 0, 0, .85)
  color #fff
  text-shadow 1px 1px 1px #000
  text-transform uppercase
  font-size 10px

.photofull img
  box-shadow 3px 3px 5px #999999
  zoom 1

/**
 * search
 */

#search-box-results
  margin 0

.search-box-result
  margin 8px 8px 0 0
  width 100px
  height 100px
  float left

.search-box-result:nth-child(6n)
  margin-right 0

.search-box-result-audio
  width 100%
  height 100%

.search-box-result-video
  height 100%
  width 100%

.search-box-result-photo
  height 100%
  width 100%

/**
 * Alerting
 */

div.alerting-sub a,
div.alerting-auth a,
div.alerting-unsub a
  background url(/img/icones/star.png) no-repeat left top
  margin 5px
  padding 3px 5px 3px 20px
  background-color #eceef5
  border 1px solid #cad4e7
  text-decoration none

div.alerting-sub a:hover,
div.alerting-auth a:hover,
div.alerting-unsub a:hover
  border 1px solid #a8b2c5

.profile
  text-align right
  margin-right 1rem
  img
    margin-left auto
  a,
  strong
    display block
