.concerts
  margin 10px

.concerts h3
  background-color #666
  color #fff
  text-shadow #000 1px 1px 1px
  padding 5px

.concerts ul
  list-style none

.concerts li
  display block
  float left
  margin 5px
  padding 0px

.concerts li a
  color #fff

#staff li, #old-staff li
  float left
  display inline

.staff-member
  width 250px
  height 150px
  -webkit-border-radius 5px
  -moz-border-radius 5px
  background-color #ececec
  padding 15px
  margin 15px

.staff-member:hover
  background-color #fefefe

.staff-member img
  float left
  margin 0 10px 5px 0

.staff-member a
  text-decoration none
  color #333 !important

.staff-member a strong
  color #000 !important

#statuts
  font-size 14px
  font-family Courier

#statuts p
  text-align justify

#statuts h3
  font-size 18px
  padding 3px
  margin 5px 0
  background-color #666666

h4
  border-bottom 1px solid #999
  color #666
  padding 5px 0
  margin 25px 0 5px 0

p
  line-height 1.2em

.postule
  float right
  margin 5px
  padding 6px 8px
  background -webkit-gradient(linear, left top, left bottom, from(#055c20), to(#519c56))
  background -webkit-linear-gradient(top, #055c20, #519c56)
  background -moz-linear-gradient(top, #055c20, #519c56)
  background -ms-linear-gradient(top, #055c20, #519c56)
  background -o-linear-gradient(top, #055c20, #519c56)
  -webkit-border-radius 24px
  -mmoz-border-radius 24px
  border-radius 24px
  text-shadow rgba(0,0,0,.4) 0 1px 0
  color white !important
  font-size 15px
  font-family 'Lucida Grande', Helvetica, Arial, Sans-Serif
  text-decoration none !important

.postule:hover
   background #276b52

.postule:active
   background #1b5c2c
