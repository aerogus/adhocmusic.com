/**
 * page des concerts
 */

.saison

  h3
    padding 5px
    border-bottom 1px solid #cecece

  li
    display inline-block
    margin 5px
    padding 0

.staff li
  margin 2rem 0

  img
    display block
    margin 0 auto 1rem
    width 100px
    height auto
    border-radius 50%
    background-color #f0f0f0
    box-shadow 0 0 1px #000

  > a > div
    display table-cell
    vertical-align top
    padding 0 1rem

/* afterworks par saison / Ã©pisodes */

ol.episodes
  counter-reset episode

  li
    list-style-type none
    counter-increment episode
    margin-bottom 1rem

    &:before
      content '#'counter(episode)
      margin-right 1rem
      background #292933
      color #fff
      padding 5px
      border-radius 50%
      font-weight bold

