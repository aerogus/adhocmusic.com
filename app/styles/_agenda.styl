#event-box-info
  margin 10px
  background #ececec
  width 300px
  padding 10px
  border 1px solid #ffffff

#event-box-map
  float left
  margin 0 5px 5px 0

/* page listing */

.events_of_the_day
  margin 10px

  h3
    margin-bottom 20px
    text-transform uppercase
    background-color #292933
    color #fff
    padding 0 5px

div.event
  margin-bottom 20px
  display flex

div.event div.event_header
  flex none
  width 200px

div.event_date
  padding 5px
  font-weight bold
  margin-bottom 5px
  display block
  text-align right
  color #fff
  background #292933

div.event_lieu
  padding-left 20px
  margin-bottom 5px
  text-align right

div.event span.event_title
  background-color #292933
  display block
  padding 5px

div.event span.event_title a
  color #fff

div.event div.event_content
  margin-left 20px
  background-color #f0f0f0
  margin-bottom 0

div.event div.event_body
  padding 10px

p.event_price
  background url(/img/icones/coins.png) no-repeat
  padding-left 20px

p.event_facebook
  margin-top 15px
  background url(/img/facebook.gif) no-repeat
  padding-left 20px

div.event div.event_footer
  background-color #acacac
  padding 5px

div.event_media
  margin-left 200px

span.event_media_video
  background url(/img/icones/video.png) no-repeat
  padding-left 20px

span.event_media_photo
  background url(/img/icones/photo.png) no-repeat
  padding-left 20px

span.event_media_audio
  background url(/img/icones/audio.png) no-repeat
  padding-left 20px
