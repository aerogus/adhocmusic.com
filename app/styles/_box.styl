/* box */

.box
  margin-bottom 20px

  &:after
    content ""
    display block
    clear both

  & > h1, > h2, > h3, > .boxtitle
    background-color #ed3438
    color #fff
    font-size 13px
    padding 5px
    text-transform uppercase

  & > div
    background #fff
    color #333
    padding 10px
    clear right

    & table
      background-color #fff

    & th
      background-color #c0c0c0
      font-weight bold
      padding 5px

    & tr
      padding 5px

      &.odd
        background-color #ececec

      &.even
        background-color #fff

    & td
      padding 5px

    &:after
      content ""
      display block
      clear both

