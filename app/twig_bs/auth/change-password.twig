{% include 'common/header.twig' %}

<div class="container">
  <h1>Changer le mot de passe</h1>

{% if change_ok %}<div class="alert alert-success">Mot de passe changé avec succès</div>{% endif %}
{% if change_ko %}<div class="alert alert-danger">Echec de la modification du mot de passe</div>{% endif %}

{% if form %}
<form id="form-password-change" name="form-password-change" method="post" action="/auth/change-password">
  <div class="mbs">
    <div class="alert alert-danger" id="error_password_old"{% if not error_password_old %} style="display: none"{% endif %}>Vous devez indiquer votre mot de passe actuel</div>
    <label for="password_old">Mot de passe actuel (*)</label>
    <input id="password_old" name="password_old" type="password" class="w100" maxlength="50">
  </div>
  <div class="mbs">
    <div class="alert alert-danger" id="error_password_new_1"{% if not error_password_new_1 %} style="display: none"{% endif %}>Vous devez indiquer un nouveau mot de passe</div>
    <label for="password_new_1">Nouveau mot de passe (*)</label>
    <input id="password_new_1" name="password_new_1" type="password" class="w100" maxlength="50">
  </div>
  <div class="mbs">
    <div class="alert alert-danger" id="error_password_new_2"{% if not error_password_new_2 %} style="display: none"{% endif %}>Vous devez indiquer un nouveau mot de passe</div>
    <div class="alert alert-danger" id="error_password_new_check"{% if not error_password_new_check %} style="display: none"{% endif %}>Problème dans votre saisie</div>
    <label for="password_new_2">Vérification nouveau mot de passe (*)</label>
    <input id="password_new_2" name="password_new_2" type="password" class="w100" maxlength="50">
  </div>
  <div>
    <input id="form-password-change-submit" name="form-password-change-submit" type="submit" class="btn btn--primary w100" value="Modifier">
  </div>
</form>
{% endif %}

</div>{# .container #}

{% include 'common/footer.twig' %}
