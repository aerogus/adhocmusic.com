{% if trail|length > 1 %}
<div class="breadcrumb">
  <ul>
    {% for key, item in trail %}
    <li>
    {% if item.link %}
      <a {% if key == 0 %} class="home"{% endif %} href="{{ item.link }}" title="{{ item.description }}">
        {% if key == 0 %}<span class="mobile">🏠</span>{% endif %}
        <span>{{ item.title }}</span>
      </a>
    {% else %}
    <span>{{ item.title }}</span>
    {% endif %}
    </li>
    {% endfor %}
  </ul>
</div>
{% endif %}
