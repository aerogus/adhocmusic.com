{% include 'common/header.twig' %}

<div class="container">
  <h1>Edition à l'affiche</h1>
  <form id="form-featured-edit" name="form-featured-edit" action="/adm/featured/edit" method="post" enctype="multipart/form-data">
    <ul>
      <li>
        <div class="infobulle error" id="error_title"{% if not error_title %} style="display:none"{% endif %}>Vous devez saisir un titre</div>
        <label for="title">Titre</label>
        <input style="width:400px" maxlength="35" type="text" name="title" id="title" value="{{ data.title }}">
      </li>
      <li>
        <div class="infobulle error" id="error_description"{% if not error_description %} style="display:none"{% endif %}>Vous devez saisir une description</div>
        <label for="description">Description</label>
        <input style="width:680px" maxlength="85" type="text" name="description" id="description" value="{{ data.description }}">
      </li>
      <li>
        <div class="infobulle error" id="error_url"{% if not error_url %} style="display:none"{% endif %}>Vous devez saisir un lien</div>
        <label for="url">Lien</label>
        <input style="width:680px" type="text" name="url" id="url" value="{{ data.url }}">
      </li>
      <li>
        <div class="infobulle error" id="error_image"{% if not error_image %} style="display:none"{% endif %}>Vous devez choisir une image</div>
        <label for="image">Image (.jpg|.png|.gif 1000x375)</label>
        <input type="file" name="image" id="image">
        <img src="{{ data.image }}" alt="">
      </li>
      <li>
        <div class="infobulle error" id="error_datdeb"{% if not error_datdeb %} style="display:none"{% endif %}>Vous devez saisir une date de début</div>
        <label for="datdeb">Début</label>
        <input type="text" name="datdeb" id="datdeb" value="{{ data.datdeb|date("Y-m-d") }}">
      </li>
      <li>
        <div class="infobulle error" id="error_datfin"{% if not error_datfin %} style="display:none"{% endif %}>Vous devez saisir une date de fin</div>
        <label for="datfin">Fin</label>
        <input type="text" name="datfin" id="datfin" value="{{ data.datFin|date("Y-m-d") }}">
      </li>
      <li>
        <label for="online">En ligne</label>
        <input class="switch" type="checkbox" name="online" id="online"{% if data.online %} checked="checked"{% endif %}>
      </li>
    </ul>
    <input id="form-featured-edit-submit" name="form-featured-edit-submit" type="submit" class="btn btn--primary" value="Modifier">
    <input type="hidden" name="id" value="{{ data.id }}">
  </form>
</div>

{% include 'common/footer.twig' %}
