{% include 'common/header.twig' %}

<div class="container">
  <div class="row">

  <div class="col-md-3">

  <h2 class="px-2 py-1 mb-0 bg-dark text-white rounded-top">Éditorial du site</h2>
  <div class="border rounded-bottom bg-white p-3 mb-3">
    <ul>
      <li><a href="/adm/featured">À la une</a></li>
      <li><a href="/adm/newsletter">Newsletter</a></li>
      <li><a href="/adm/faq">Foire aux questions</a></li>
      <li><a href="/adm/cms">Pages statiques</a></li>
      <li><a href="/comments">Commentaires</a></li>
    </ul>
  </div>

  <h2 class="px-2 py-1 mb-0 bg-dark text-white rounded-top">Base de données</h2>
  <div class="border rounded-bottom bg-white p-3 mb-3">
    <ul>
       <li><a href="/adm/membres">Membres</a></li>
       <li><a href="/adm/groupes">Groupes</a></li>
       <li><a href="/adm/groupe-de-style">Groupe de Style</a></li>
       <li><a href="/adm/photos">Photos</a></li>
       <li><a href="/adm/audios">Audios</a></li>
       <li><a href="/adm/videos">Vidéos</a></li>
    </ul>
  </div>

  </div>
  <div class="col-md-9">

    <table class="table table-striped">
      <thead class="table-dark">
        <tr>
          <th>Forum</th>
          <th>Dernier Message</th>
          <th>Discussions</th>
          <th>Messages</th>
        </tr>
      </thead>
      <tbody>
      {% for forum in forums %}
        <tr>
          <td><a href="/adm/forums/forum/{{ forum.id_forum }}"><strong>{{ forum.title }}</strong></a><br />{{ forum.description }}</td>
          <td>Par <a href="/membres/{{ forum.id_contact }}">{{ forum.pseudo }}</a><br />le {{ forum.date|date("d/m/Y \\à H\\:M") }}</td>
          <td>{{ forum.nb_threads }}</td>
          <td>{{ forum.nb_messages }}</td>
        </tr>
      {% endfor %}
      </tbody>
    </table>

  </div>{# .col* #}

  </div>{# .row #}
</div>{# .container #}

{% include 'common/footer.twig' %}
