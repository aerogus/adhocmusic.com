{% include 'common/header.twig' %}

<div class="container">

  <div class="row">
  <div class="col-md-8 mx-auto">

  <h2 class="px-2 py-1 mb-0 bg-dark text-white rounded-top">Ajouter une musique</h2>
  <div class="border rounded-bottom bg-white p-3">

    <form name="form-audio-create" id="form-audio-create" method="post" action="/audios/create" enctype="multipart/form-data">
      <div class="row mb-3">
        <label class="col-3 form-label" for="file">Audio (*)</label>
        <div class="col-9">
          <div class="alert alert-danger" id="error_file"{% if not error_file %} style="display: none"{% endif %}>Vous devez choisir un fichier .mp3 √† uploader</div>
          <input type="file" id="file" class="form-control" name="file" value=""> (.mp3 16bits/44KHz/st√©r√©o, &lt; 16 Mo)
        </div>
      </div>

      <div class="row mb-3">
        <label class="col-3 form-label" for="name">Titre (*)</label>
        <div class="col-9">
          <div class="alert alert-danger" id="error_name"{% if not error_name %} style="display: none"{% endif %}>Vous devez renseigner un titre</div>
          <input type="text" id="name" name="name" class="form-control" value="">
        </div>
      </div>

      <div class="row mb-3">
        <label class="col-3 form-label" for="groupe">Groupe</label>
        <div class="col-9">
          {% if groupe %}
            <input type="hidden" name="id_groupe" value="{{ groupe.id }}">
            <span>{{ groupe.name }}</span>
          {% else %}
            <div class="alert alert-danger" id="error_id_groupe"{% if not error_id_groupe %} style="display: none"{% endif %}>Vous devez lier cette musique √† un groupe, un lieu ou un √©v√©nement</div>
            <select id="id_groupe" name="id_groupe" class="w100">
              <option value="0">Aucun</option>
              {% for groupe in groupes %}
              <option value="{{ groupe.id }}">{{ groupe.name }}</option>
              {% endfor %}
            </select>
          {% endif %}
        </div>
      </div>

      <div class="row mb-3">
        <label class="col-3 form-label" for="id_lieu">Lieu</label>
        <div class="col-9">
          {% if lieu %}
            <input type="hidden" name="id_lieu" value="{{ lieu.id }}">
            <span>{{ lieu.name }}</span>
          {% else %}
            <select id="id_lieu" name="id_lieu" class="w100">
              <optgroup label="Autre">
                <option value="0">aucun / non r√©f√©renc√©</option>
              </optgroup>
              {% for dep in deps %}
              <optgroup label="{{ dep.id }} - {{ dep.name }}">
                {% for lieu in lieux %}
                <option value="{{ lieu.id }}">{{ lieu.city.cp }} {{ lieu.city.name }} : {{ lieu.name }}</option>
                {% endfor %}
              </optgroup>
              {% endfor %}
            </select>
          {% endif %}
        </div>
      </div>

      <div class="row mb-3">
        <label class="col-3 form-label" for="id_event">√âv√®nement</label>
        <div class="col-9">
          {% if event %}
            <input type="hidden" name="id_event" value="{{ event.id }}">
            <span style="float: right;">{{ event.date }} - {{ event.name }}</span>
          {% else %}
            <select id="id_event" name="id_event" class="w100">
              <option value="0">Aucun</option>
            </select>
          {% endif %}
        </div>
      </div>

      <div class="row mb-3">
        <label class="col-3 form-check-label" for="online">Rendre public</label>
        <div class="col-9">
          <input class="form-check-input" type="checkbox" name="online" checked="checked">
        </div>
      </div>

      <div class="row mb-3">
        <div class="offset-3">
          <input id="form-audio-create-submit" name="form-audio-create-submit" class="btn btn-primary" type="submit" value="üíæ Enregistrer">
        </div>
      </div>

    </form>

  </div>
  </div>
</div>

{% include 'common/footer.twig' %}
