{% include 'common/header.twig' %}

<div class="container">

  {% if delete %}
  <div class="alert alert-success">La suppression du son a été effectuée</div>
  {% endif %}

  <h2 class="px-2 py-1 mb-0 bg-dark text-white rounded-top">Mes musiques</h2>
  <div class="border rounded-bottom bg-white p-3">

    <a href="/audios/create" class="btn btn-primary">➕ Ajouter une musique</a>

{% if audios|length == 0 %}

<p>Aucune musique</p>

{% else %}

<table class="table table-striped">
  <thead>
    <tr>
      <th>Groupe</th>
      <th>Titre</th>
      <th>Créé le</th>
      <th>Modifié le</th>
    </tr>
  </thead>
  <tbody>
  {% for audio in audios %}
    <tr>
      <td>{% if audio.groupe %}{{ audio.groupe.name }}{% endif %}</td>
      <td><a href="/audios/edit/{{ audio.idAudio }}">{{ audio.name }}</a></td>
      <td>{{ audio.createdAt }}</td>
      <td>{{ audio.modifiedAt }}</td>
    </tr>
  {% endfor %}
  </tbody>
</table>

{% endif %}

<a href="/audios/create" class="btn btn-primary">➕ Ajouter une musique</a>

  </div>
</div>

{% include 'common/footer.twig' %}
