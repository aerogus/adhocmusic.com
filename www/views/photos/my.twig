{% include 'common/header.twig' %}

<div class="container">

  {% if create %}<p class="alert alert-success">Photo ajoutée</p>{% endif %}
  {% if edit %}<p class="alert alert-success">Photo modifiée</p>{% endif %}
  {% if delete %}<p class="alert alert-success">Photo supprimée</p>{% endif %}

  <h2 class="px-2 py-1 mb-0 bg-dark text-white rounded-top">Mes photos</h2>
  <div class="border rounded-bottom bg-white p-3">

  <a href="/photos/create" class="btn btn-primary">➕ Ajouter une photo</a>

{% if photos|length == 0 %}

<p>Aucune photo</p>

{% else %}

<div class="gallery">
{% for photo in photos %}
  <div class="photo">
    <a href="/photos/edit/{{ photo.id }}?page={{ page }}" title="{{ photo.name }}{% if photo.groupe %} ({{ photo.groupe.name }}){% endif %}">
      <img src="{{ photo.ThumbUrl }}" alt="{{ photo.name }}{% if photo.groupe %} ({{ photo.Groupe.name }}){% endif %}">
    </a>
  </div>
{% endfor %}
</div>

{% endif %}

  <a href="/photos/create" class="btn btn-primary">➕ Ajouter une photo</a>

  </div>
</div>

{% include 'common/footer.twig' %}
