{% include 'common/header.twig' %}

<div class="container">

  <h1 class="px-2 py-1 mb-0 bg-dark text-white rounded-top">Partenaires</h1>
  <div class="border rounded-bottom bg-white p-3">
    {% if partners %}
    <ul class="partners">
    {% for partner in partners %}
      <li>
        <a href="{{ partner.url }}">
          <img src="{{ partner.iconUrl }}" alt="">
          <strong>{{ partner.title }}</strong><br>{{ partner.description }}
        </a>
      </li>
    {% endfor %}
    </ul>
    {% else %}
    Pas de partenaires référencés
    {% endif %}
  </div>

</div>

{% include 'common/footer.twig' %}
