{% include 'common/header.twig' %}

<div class="container">

  <h1 class="px-2 py-1 mb-3 bg-dark text-white rounded-top">Partenaires</h1>
  {% if partners %}
  <div class="row row-cols-md-3 g-3">
  {% for partner in partners %}
    <div class="col">
      <div class="card w-100 p-3">
        <a href="{{ partner.url }}">
          <img src="{{ partner.iconUrl }}" alt="" class="pe-3">
          <strong>{{ partner.title }}</strong>
        </a>
        <div class="card-text"><small>{{ partner.description }}</small></div>
      </div>
    </div>
  {% endfor %}
  </div>
  {% else %}
  <div class="alert alert-info">Aucun partenaire référencé</div>
  {% endif %}

</div>

{% include 'common/footer.twig' %}