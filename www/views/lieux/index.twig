{{ include('common/header.twig') }}

<div class="container">
  <h1 class="px-2 py-1 mb-0 bg-dark text-white rounded-top">Lieux</h1>
  <div class="border rounded-bottom bg-white p-3 mb-3">
  {% for region in regions %}
    <h2>{{ region.name }}</h2>
    {% for departement in departements[region.idRegion] %}
      <h3>{{ departement.idDepartement }} - {{ departement.name }}</h3>
      {% if lieux[region.idRegion][departement.idDepartement]|length > 0 %}
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Nom</th>
              <th>Code Postal</th>
              <th>Ville</th>
              <th>Adresse</th>
            </tr>
          </thead>
        <tbody>
        {% for lieu in lieux[region.idRegion][departement.idDepartement] %}
          <tr>
            <td><a href="{{ lieu.url }}">{{ lieu.name }}</a></td>
            <td>{{ lieu.city.cp }}</td>
            <td>{{ lieu.city.name }}</td>
            <td>{{ lieu.address }}</td>
          </tr>
        {% endfor %}
        </tbody>
      </table>
      {% else %}
        <p>Pas de lieu référencé dans ce département</p>
      {% endif %}
    {% endfor %}
  {% endfor %}
  </div>
</div>

{{ include('common/footer.twig') }}
