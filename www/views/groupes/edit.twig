{{ include('common/header.twig') }}

<div class="container">

{% if unknown_groupe %}

  <div class="alert alert-danger">Groupe introuvable</div>

{% elseif not_my_groupe %}

  <div class="alert alert-danger">Vous ne pouvez pas √©diter ce groupe.</div>

{% else %}

  <h2 class="px-2 py-1 mb-0 bg-dark text-white rounded-top">{{ data.name }}</h2>
  <div class="border rounded-bottom bg-white p-3">
    <form id="form-groupe-edit" name="form-groupe-edit" method="post" action="/groupes/edit" enctype="multipart/form-data">

      <div class="row mb-3">
        <label class="col-3 form-label" for="name">Nom (*)</label>
        <div class="col-9">
          <div class="alert alert-danger" id="error_name"{% if not error_name %} style="display: none"{% endif %}>Vous devez renseigner le nom de votre groupe</div>
          <input type="text" id="name" name="name" value="{{ data.name }}" class="form-control" readonly>
        </div>
      </div>

      <div class="row mb-3">
        <label class="col-3 form-label" for="lelogo">Logo (.jpg)</label>
        <div class="col-9">
          <img src="{{ data.logo }}" alt=""><br>
          <input type="file" id="lelogo" class="form-control" name="lelogo">
        </div>
      </div>

      <div class="row mb-3">
        <label class="col-3 form-label" for="photo">Photo (.jpg)</label>
        <div class="col-9">
          <img src="{{ data.photo }}" alt=""><br>
          <input type="file" class="form-control" id="photo" name="photo">
        </div>
      </div>

      <div class="row mb-3">
        <label class="col-3 form-label" for="mini_photo">Mini Photo carr√©e</label>
        <div class="col-9">
          <img src="{{ data.mini_photo }}" alt=""><br>
          <input type="file" class="form-control" id="mini_photo" name="mini_photo">
        </div>
      </div>

      <div class="row mb-3">
        <label class="col-3 form-label" for="style">Style (*)</label>
        <div class="col-9">
          <div class="alert alert-danger" id="error_style"{% if not error_style %} style="display: none"{% endif %}>Vous devez pr√©ciser le style musical</div>
          <input type="text" id="style" name="style" class="form-control" value="{{ data.style }}">
        </div>
      </div>

      <div class="row mb-3">
        <label class="col-3 form-label" for="influences">Influences</label>
        <div class="col-9">
          <div class="alert alert-danger" id="error_influences"{% if not error_influences %} style="display: none"{% endif %}>Vous devez pr√©ciser vos influences</div>
          <input type="text" id="influences" name="influences" class="form-control" value="{{ data.influences }}">
        </div>
      </div>

      <div class="row mb-3">
        <label class="col-3 form-label" for="site">Site Web</label>
        <div class="col-9">
          <input type="text" id="site" name="site" class="form-control" value="{{ data.site }}">
        </div>
      </div>

      <div class="row mb-3">
        <label class="col-3 form-label" for="facebook_page_id">Identifiant Page Facebook</label>
        <div class="col-9">
          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text" id="facebook_page_id_prepend" >https://www.facebook.com/pages/nomdugroupe/</span>
            </div>
            <input type="text" id="facebook_page_id" class="form-control" name="facebook_page_id" value="{{ data.facebook_page_id }}" aria-describedby="facebook_page_id_prepend">
          </div>
        </div>
      </div>

      <div class="row mb-3">
        <label class="col-3 form-label" for="twitter_id">Identifiant Twitter</label>
        <div class="col-9">
          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text" id="twitte_id_prepend" >http://www.twitter.com/</span>
            </div>
            <input type="text" id="twitter_id" class="form-control" name="twitter_id" value="{{ data.twitter_id }}" aria-describedby="twitter_id_prepend">
          </div>
        </div>
      </div>

      <div class="row mb-3">
        <label class="col-3 form-label" for="lineup">Lineup (*)</label>
        <div class="col-9">
          <div class="alert alert-danger" id="error_lineup"{% if not error_lineup %} style="display: none"{% endif %}>Vous devez pr√©ciser votre formation</div>
          <textarea id="lineup" name="lineup" class="form-control" rows="5">{{ data.lineup }}</textarea>
        </div>
      </div>

      <div class="row mb-3">
        <label class="col-3 form-label" for="mini_text">Mini Pr√©sentation (*)</label>
        <div class="col-9">
          <div class="alert alert-danger" id="error_mini_text"{% if not error_mini_text %} style="display: none"{% endif %}>Vous devez √©crire une mini pr√©sentation de moins de 250 caract√®res</div>
          <textarea id="mini_text" name="mini_text" class="form-control" rows="5">{{ data.mini_text }}</textarea>
        </div>
      </div>

      <div class="row mb-3">
        <label class="col-3 form-label" for="text">Pr√©sentation (*)</label>
        <div class="col-9">
          <div class="alert alert-danger" id="error_text"{% if not error_text %} style="display: none"{% endif %}>Vous devez pr√©ciser le champ pr√©sentation</div>
          <textarea id="text" name="text" class="form-control" rows="20">{{ data.text }}</textarea>
        </div>
      </div>

      <div class="row mb-3">
        <label class="col-3 form-label" for="id_type_musicien">Ma fonction</label>
        <div class="col-9">
          <div class="alert alert-danger" id="error_id_type_musicien"{% if not error_id_type_musicien %} style="display: none"{% endif %}>Vous devez pr√©ciser votre fonction</div>
          <select id="id_type_musicien" name="id_type_musicien" class="form-control">
            {% for type_musicien in types_musicien %}
            <option value="{{ type_musicien.idTypeMusicien }}" {% if type_musicien.idTypeMusicien == data.id_type_musicien %} selected{% endif %}>{{ type_musicien.name }}</option>
            {% endfor %}
          </select>
        </div>
      </div>

      <input type="hidden" name="id" value="{{ data.id_groupe }}">
      <input id="form-groupe-edit-submit" name="form-groupe-edit-submit" class="btn btn-primary w100" type="submit" value="üíæ Enregistrer">
    </form>
  </div>

  <div>
    <a href="/photos/create?id_groupe={{ groupe.idGroupe }}" class="btn btn-primary">‚ûï Ajouter une photo</a>
    <a href="/audios/create?id_groupe={{ groupe.idGroupe }}" class="btn btn-primary">‚ûï Ajouter une musique</a>
    <a href="/videos/create?id_groupe={{ groupe.idGroupe }}" class="btn btn-primary">‚ûï Ajouter une vid√©o</a>
    <a href="{{ groupe.Url }}" class="btn btn-primary">Voir la fiche</a>
  </div>

{% endif %}

</div>{# .container #}

{{ include('common/footer.twig') }}
