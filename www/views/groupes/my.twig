{% include 'common/header.twig' %}

<div class="container">
  <h1>Mes Groupes</h1>
<div>

{% if delete %}
<div class="alert alert-success">Groupe supprimé</div>
{% endif %}

{% if groupes|length > 0 %}
<table class="table table-striped">
  <tr>
    <th>Groupe</th>
    <th>Création</th>
    <th>Modification</th>
  </tr>
  {% for groupe in groupes %}
  <tr>
    <td><a href="/groupes/edit/{{ groupe.id }}" title="{{ groupe.name }}"><img src="{{ groupe.miniPhoto }}" alt="{{ groupe.name }}"><br>{{ groupe.name }}</a></td>
    <td>{{ groupe.createdAt|date("d/m/Y") }}</td>
    <td>{{ groupe.modifiedAt|date("d/m/Y") }}</td>
  </tr>
  {% endfor %}
</table>
{% else %}
<p>Vous n'administrez aucun groupe</p>
{% endif %}

<a href="/groupes/create" class='btn btn-primary'>Inscrire un groupe</a>

  </div>
</div>

{% include 'common/footer.twig' %}
