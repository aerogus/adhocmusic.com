{% include 'common/header.twig' %}

<div class="container">

  <h2 class="px-2 py-1 mb-0 bg-dark text-white rounded-top">Mes groupes</h2>
  <div class="border rounded-bottom bg-white p-3">

{% if delete %}
<div class="alert alert-success">Groupe supprimé</div>
{% endif %}

{% if groupes|length > 0 %}
<table class="table table-striped">
  <tr>
    <th>Groupe</th>
    <th>Création</th>
    <th>Modification</th>
  </tr>
  {% for groupe in groupes %}
  <tr>
    <td><a href="/groupes/edit/{{ groupe.idGroupe }}" title="{{ groupe.name }}"><img src="{{ groupe.miniPhoto }}" alt="{{ groupe.name }}"><br>{{ groupe.name }}</a></td>
    <td>{{ groupe.createdAt|date("d/m/Y") }}</td>
    <td>{{ groupe.modifiedAt|date("d/m/Y") }}</td>
  </tr>
  {% endfor %}
</table>
{% else %}
<p>Vous n'administrez aucun groupe</p>
{% endif %}

<a href="/groupes/create" class="btn btn-primary">➕ Inscrire un groupe</a>

  </div>
</div>{# .container #}

{% include 'common/footer.twig' %}
