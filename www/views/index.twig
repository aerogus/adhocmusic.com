{% include 'common/header.twig' %}

<div class="container">

<div id="swipe" class="swipe clearfix my-0">
  <ul class="swipe-wrap">
    {% for idx, f in featured %}
    <li data-index="{{ idx }}">
      <a href="{{ f.url }}">
        <h2>{{ f.title }}<br><span>{{ f.description }}</span></h2>
        <img src="{{ f.image }}" title="{{ f.description }}" alt="">
      </a>
    </li>
    {% endfor %}
  </ul>
  <div class="swipe-pagination-wrapper">
    <ul class="swipe-pagination">
      {% for idx, f in featured %}
      <li data-index="{{ idx }}">
        <a href="{{ f.url }}"></a>
      </li>
      {% endfor %}
    </ul>
  </div>
</div>

<div class="row mt-3">

  <div class="col-md-8">

    <h2 class="px-2 py-1 mb-3 bg-dark text-white rounded-top">Ils sont passés par AD’HOC</h2>
    <div class="row row-cols-md-3 g-3">
      {% for video in videos %}
      <div class="col">
        <div class="card w-100 shadow-sm">
          <a href="{{ video.url }}" title="Regarder la vidéo {{ video.name }}"><img src="{{ video.thumbUrl }}" class="img-fluid" alt=""></a>
          <div class="card-body">
            <p class="card-text"><a href="{{ video.groupe.url }}" title="Aller à la page du groupe {{ video.groupe.name }}">{{ video.groupe.name }}</a></p>
            <p class="card-text"><a href="{{ video.url }}" title="Regarder la vidéo {{ video.name }}">{{ video.name }}</a></p>
            <p class="card-text"><a href="{{ video.event.url }}" title="Aller à la page de l'événement {{ video.event.name }}">{{ video.event.date|format_datetime(pattern='dd LLLL yyyy') }}</a>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>

  </div>

  <div class="col-md-4">

    <h2 class="px-2 py-1 mb-0 bg-dark text-white rounded-top"><a href="/events" title="Agenda">Agenda</a></h2>
    <div class="border rounded-bottom bg-white p-3 mb-3 row">
      {% if events %}
      <ul>
      {% for month, month_events in events %}
        <li class="mbs">
          <strong>{{ month|format_datetime(pattern='LLLL yyyy')|capitalize }}</strong>
          <ul>
          {% for event in month_events %}
            <li><span style="font-weight: bold; color: #cc0000;" title="{{ event.date|format_datetime('full') }}">{{ event.date|format_datetime(pattern='dd') }}</span> <a href="{{ event.url }}" title="{{ event.name }}">{{ event.name|slice(0, 40) }}</a></li>
          {% endfor %}
          </ul>
        </li>
      {% endfor %}
      </ul>
      {% else %}
      aucun événement annoncé
      {% endif %}
    </div>
  </div>

  </div>{# .col-md-4 #}

</div>{# .row #}

</div>{# .container #}

{% include 'common/footer.twig' %}
