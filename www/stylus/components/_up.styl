/**
 * Bouton retour en haut de page
 */

#up
  position fixed
  border 0
  padding 0
  bottom 20px
  right 20px
  width 40px
  background-color #292933
  display none
  font-size 24px
  font-weight bold
  color #fff
  line-height 40px
  border-radius 50%
  box-shadow 0 0 5px #ececec
  &:hover
    background-color lighten(#292933, 5%)
