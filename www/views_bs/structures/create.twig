{% include 'common/header.twig' %}

<div class="container">
  <h1 class="px-2 py-1 mb-0 bg-dark text-white rounded-top">Ajouter une structure</h1>
  <div class="border rounded-bottom bg-white p-3">
    <form id="form-structure-create" name="form-structure-create" method="post" action="/structures/create">
      <ul>
        <li>
          <div class="alert alert-danger" id="error_name"{% if not error_name %} style="display: none"{% endif %}>Vous devez saisir un titre pour la structure</div>
          <label for="name">Nom</label>
          <input type="text" id="name" name="name" size="50" value="">
        </li>
      </ul>
      <input id="form-structure-create-submit" name="form-structure-create-submit" class="btn btn-primary" type="submit" value="Enregistrer">
    </form>
  </div>
</div>

{% include 'common/footer.twig' %}
